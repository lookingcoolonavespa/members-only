extends layout

block content 
  div.main-form-ctn
    form.main-form(action='' method='POST')
      div.content-title Log in
      div.form-group
        label(for='username') 
          span.text-wrapper Username
        input(type='text' name='username')
      div.form-group
        label(for='password') 
          span.text-wrapper Password
        input(type='password' name='password')
      button.flat-btn(type='submit') Log in
      if message
        p #{message}