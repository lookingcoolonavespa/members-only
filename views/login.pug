extends layout

block content 
  form.main-form(action='' method='POST')
    div.content-title Log in
    div.form-group
      label(for='username') Username
      input(type='text' name='username')
    div.form-group
      label(for='password') Password
      input(type='password' name='password')
    button.flat-btn(type='submit') Log in
  - console.log(message)
    if message
      p #{message}